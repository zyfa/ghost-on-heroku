<!DOCTYPE html>
<html lang="{{lang}}">
<head>

    {{> theme_head}}

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}
    
</head>
<body class="subscribe">

    <main id="content" role="main">
        <div class="container">
            <div class="col-lg-8 offset-lg-2 text-center">
                <h1 class="post-title">
                    {{^if success}}
                        {{t "Subscribe to {blogtitle}" blogtitle=@blog.title}}
                    {{else}}
                        {{t "Subscribed!"}}
                    {{/if}}
                </h1>
                {{^if success}}
                    {{subscribe_form
                        form_class="gh-signin"
                        input_class="gh-input"
                        button_class="btn"
                        placeholder=(t "Your email address")
                        autofocus="true"
                    }}
                {{else}}
                    <p>
                        {{t "You've successfully subscribed to"}} <em>{{@blog.title}}</em>
                        {{t "with the email address"}} <em>{{email}}</em>.
                    </p>
                {{/if}}
                <div class="social">
                    {{#if @blog.facebook}}
                        <li><a href="{{facebook_url}}" class="facebook" title="{{@blog.facebook}}" target="_blank"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
                    {{/if}}
                    {{#if @blog.twitter}}
                        <li><a href="{{twitter_url}}" class="twitter" title="{{@blog.twitter}}" target="_blank"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
                    {{/if}}
                    <li><a href="https://www.youtube.com/" class="youtube" title="Youtube" target="_blank"><i class="fab fa-youtube" aria-hidden="true"></i></a></li>
                    <li><a href="https://www.instagram.com/" class="instagram" title="Instagram" target="_blank"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                    <li><a href="{{@blog.url}}/rss" title="{{t "RSS Feed"}}" target="_blank"><i class="fa fa-rss" aria-hidden="true"></i></a></li>
                </div>
                <span class="or">{{t "or"}}</span>
                <a href="{{@blog.url}}" class="btn" title="Back">{{t "Return to main page"}}</a>
            </div>
        </div>
    </main>

    {{!-- 3rd party scripts --}}
    <script type="text/javascript" src="{{asset "js/libraries.js"}}"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/locale/{{lang}}.js"></script>

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}
    
    {{!-- The main JavaScript file for Zvikov --}}
    <script type="text/javascript" src="{{asset "js/main.js"}}"></script>

</body>
</html>
